{
  "name": "vns",
  "image": "mcr.microsoft.com/devcontainers/python:3.12",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "configureZshAsDefaultShell": true,
      "installOhMyZshConfig": false
    },
    "ghcr.io/rocker-org/devcontainer-features/quarto-cli:1": {}
  },
  "postCreateCommand": "pip install . && nbdev_install_hooks && pre-commit install",
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": ".venv/bin/python",
        "python.analysis.typeCheckingMode": "basic",
        "editor.formatOnSave": true,
        "notebook.formatOnSave.enabled": true,
        "python.terminal.activateEnvInCurrentTerminal": true,
        "gitlens.showWelcomeOnInstall": false,
        "files.insertFinalNewline": true,
        "[python]": {
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.fixAll.ruff": true,
            "source.organizeImports.ruff": true
          },
          "editor.defaultFormatter": "charliermarsh.ruff"
        },
        "[json]": {
          "editor.formatOnSave": true,
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "workbench.startupEditor": "readme",
        "extensions.experimental.deferredStartupFinishedActivation": true,
        "editor.fontFamily": "MesloLGS NF, Consolas, 'Courier New', monospace",
        "dotfiles.repository": "schlich/.dotfiles",
        "dotfiles.installCommand": "./dotfiles/dotbot/tools/git-submodule/install",
        "dotfiles.targetPath": "~/dotfiles"
      },
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "tamasfe.even-better-toml",
        "charliermarsh.ruff",
        "esbenp.prettier-vscode",
        "GitHub.copilot"
      ]
    }
  }
}

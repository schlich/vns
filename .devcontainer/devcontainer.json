{
  "name": "VNS",
  "image": "mcr.microsoft.com/devcontainers/python",
  "features": {
    "ghcr.io/julialang/devcontainer-features/julia:1": {},
    "ghcr.io/schlich/devcontainer-features/rye:1.1.8": {},
    "ghcr.io/eitsupi/devcontainer-features/nushell:0": {},
    "ghcr.io/schlich/devcontainer-features/pigz:0": {},
    "ghcr.io/rocker-org/devcontainer-features/quarto-cli:1": {},
    "ghcr.io/devcontainers-contrib/features/ffmpeg-apt-get:1": {},
    "ghcr.io/devcontainers-contrib/features/starship:1": {}
  },
  "postCreateCommand": "echo \"eval '$(starship init bash)'\" >> ~/.bashrc",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-toolsai.datawrangler",
        "charliermarsh.ruff",
        "GitHub.copilot",
        "tamasfe.even-better-toml",
        "redhat.vscode-yaml",
        "mechatroner.rainbow-csv",
        "Posit.shiny-python",
        "GitHub.github-vscode-theme",
        "seatonjiang.gitmoji-vscode",
        "TheNuProjectContributors.vscode-nushell-lang",
        "quarto.quarto"
      ],
      "settings": {
        "[python]": {
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
          },
          "editor.defaultFormatter": "charliermarsh.ruff"
        },
        "python.defaultInterpreterPath": ".venv/bin/python",
        "python.analysis.typeCheckingMode": "strict",
        "jupyter.notebookFileRoot": "${containerWorkspaceFolder}",
        "notebook.formatOnCellExecution": true,
        "notebook.formatOnSave.enabled": true,
        "notebook.scrolling.revealNextCellOnExecute": "firstLine",
        "notebook.cellToolbarLocation": {
          "default": "hidden"
        },
        "notebook.lineNumbers": "on",
        "notebook.codeActionsOnSave": {
          "notebook.source.fixAll": true,
          "notebook.source.organizeImports": true
        },
        "yaml.schemas": {
          "https://squidfunk.github.io/mkdocs-material/schema.json": "mkdocs.yml"
        },
        "yaml.customTags": [
          "!ENV scalar",
          "!ENV sequence",
          "!relative scalar",
          "tag:yaml.org,2002:python/name:material.extensions.emoji.to_svg",
          "tag:yaml.org,2002:python/name:material.extensions.emoji.twemoji",
          "tag:yaml.org,2002:python/name:pymdownx.superfences.fence_code_format"
        ],
	      "terminal.integrated.smoothScrolling": true,
        "jupyter.disableJupyterAutoStart": true
      }
    }
  },
  "forwardPorts": [8787]
}

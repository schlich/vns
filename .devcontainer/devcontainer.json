{
  "name": "VNS (micromamba)",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/mamba-org/devcontainer-features/micromamba:1": {
      "channels": "conda-forge",
      "envFile": "conda-lock.yml",
      "envName": "vns"
    },
    "ghcr.io/devcontainers-contrib/features/pipx-package:1": {
      "package": "conda-lock"
    }
  },
  "postCreateCommand": "micromamba env create -n vns -f conda-lock.yml",
  "remoteEnv": {
    "MAMBA_ROOT_PREFIX": "${containerWorkspaceFolder}/micromamba",
    "XDG_DATA_HOME": "${containerWorkspaceFolder}/data"
  },
  "containerEnv": {
    "MAMBA_ALWAYS_YES": "true"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-toolsai.datawrangler",
        "tamasfe.even-better-toml",
        "charliermarsh.ruff",
        "Evidence.evidence-vscode",
        "GitHub.copilot"
      ],
      "settings": {
        "[python]": {
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.fixAll.ruff": true,
            "source.organizeImports": true
          }
        },
        "notebook.formatOnSave.enabled": true,
        "notebook.codeActionsOnSave": {
          "source.fixAll.ruff": true,
          "source.organizeImports.ruff": true
        },
        "editor.defaultFormatter": "charliermarsh.ruff",
        "dotfiles.repository": "schlich/.dotfiles",
        "python.condaPath": "/usr/local/bin/micromamba",
        "python.defaultInterpreterPath": "${containerWorkspaceFolder}/micromamba/envs/vns/bin/python"
      }
    }
  }
}

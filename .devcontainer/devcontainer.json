{
  "name": "VNS (micromamba)",
  "image": "mcr.microsoft.com/devcontainers/python:3.12",
  "features": {
    "ghcr.io/rocker-org/devcontainer-features/miniforge:1": {},
    "ghcr.io/rocker-org/devcontainer-features/quarto-cli:1": {"version": "prerelease"},
    "ghcr.io/devcontainers-contrib/features/hatch:2": {}
  },
  // "updateContentCommand": "micromamba create -n vns -f conda-lock.yml",
  // "postCreateCommand": "pip install -e . && micromamba shell init --shell zsh --root-prefix=${containerWorkspaceFolder}/micromamba",
  "remoteEnv": {
    // "XDG_DATA_HOME": "${containerWorkspaceFolder}/data",
    // "MAMBA_ROOT_PREFIX": "${containerWorkspaceFolder}/.micromamba"
  },
  "containerEnv": {
    "MAMBA_ALWAYS_YES": "true",
    "HATCH_ENV": "dev"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-toolsai.datawrangler",
        "charliermarsh.ruff",
        "GitHub.copilot",
        "HamelHusain.nbdev",
        "tamasfe.even-better-toml",
        "redhat.vscode-yaml",
        "mechatroner.rainbow-csv",
        "github.vscode-github-actions",
        "GitHub.vscode-pull-request-github",
        "eamodio.gitlens"
      ],
      "settings": {
        "[python]": {
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.fixAll.ruff": true,
            "source.organizeImports.ruff": true
          },
          "editor.defaultFormatter": "charliermarsh.ruff"
        },
        "dotfiles.repository": "schlich/.dotfiles"
        // "python.defaultInterpreterPath": "${containerWorkspaceFolder}/.micromamba/envs/vns/bin/python",
        // "jupyter.notebookFileRoot": "${containerWorkspaceFolder}"
      }
    }
  }
}

{
  "name": "VNS (micromamba)",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/mamba-org/devcontainer-features/micromamba:1": {
      "channels": "conda-forge",
      "envFile": "environment.yml",
      "envName": "vns"
    },
    "ghcr.io/devcontainers-contrib/features/pipx-package:1": {
      "package": "conda-lock"
    },
    "ghcr.io/rocker-org/devcontainer-features/quarto-cli:1": {},
    "ghcr.io/devcontainers-contrib/features/hatch:2": {}
  },
  "updateContentCommand": "micromamba env create -n vns -f environment.yml",
  "postCreateCommand": "micromamba run -n vns nbdev_install_hooks",
  "remoteEnv": {
    "MAMBA_ROOT_PREFIX": "${containerWorkspaceFolder}/micromamba",
    "XDG_DATA_HOME": "${containerWorkspaceFolder}/data"
  },
  "containerEnv": {
    "MAMBA_ALWAYS_YES": "true",
    "HATCH_ENV": "vns"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-toolsai.datawrangler",
        "tamasfe.even-better-toml",
        "charliermarsh.ruff",
        "Evidence.evidence-vscode",
        "GitHub.copilot",
        "HamelHusain.nbdev"
      ],
      "settings": {
        "[python]": {
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.fixAll.ruff": true,
            "source.organizeImports.ruff": true
          },
          "editor.defaultFormatter": "charliermarsh.ruff"
        },
        "dotfiles.repository": "schlich/.dotfiles",
        "python.condaPath": "/usr/local/bin/micromamba",
        "python.defaultInterpreterPath": "${containerWorkspaceFolder}/micromamba/envs/vns/bin/python"
      }
    }
  },
  "forwardPorts": [8787]
}
